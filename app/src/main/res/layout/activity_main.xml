<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorines2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/root1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CONFIGURA TU JUEGO"
        android:textColor="#D11655"
        android:background="@color/blanco"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="#D11655"
                android:textStyle="bold"
                android:text="NIVEL"
                android:background="@color/amarillo"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <NumberPicker
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:id="@+id/edit_toques"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/amarillo"
                ></NumberPicker>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#D11655"
                android:text="CAJAS POR TOQUE"
                android:background="@color/aguamarina"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <NumberPicker
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:id="@+id/edit_cajas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aguamarina"
                ></NumberPicker>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Continuar"
                android:onClick="Proseguir1"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/jugadornombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:hint="Escribe nombre Jugador"
            android:visibility="visible" />

        <Button
            android:id="@+id/continuarsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80sp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="Proseguir"
            android:text="CONTINUAR"
            android:visibility="visible" />


    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
